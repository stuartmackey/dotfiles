echo "-- Create Polybar directory"
rm -rf $HOME/.config/polybar/
mkdir $HOME/.config/polybar/

echo "-- symlink polybar config"
ln -s ~/Working/personal/neovim-config/polybar/config ~/.config/polybar/config
ln -s ~/Working/personal/neovim-config/polybar/launch.sh ~/.config/polybar/launch.sh
ln -s ~/Working/personal/neovim-config/polybar/spotify_status.py ~/.config/polybar/spotify_status.py
ln -s ~/Working/personal/neovim-config/polybar/get_spotify_status.sh ~/.config/polybar/get_spotify_status.sh
ln -s ~/Working/personal/neovim-config/polybar/cmus.sh ~/.config/polybar/cmus.sh

chmod +x ~/.config/polybar/launch.sh
chmod +x ~/.config/polybar/spotify_status.py
chmod +x ~/.config/polybar/get_spotify_status.sh
chmod +x ~/.config/polybar/cmus.sh

echo "-- install dependancies"
sudo apt -y install playerctl pavucontrol
